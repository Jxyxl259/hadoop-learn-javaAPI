<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
<!-- 默认的HDFS文件系统上存放的数据是要存三份的，这里伪分布式设置为只存一份 -->
    <property>
        <name>dfs.replication</name>
        <value>1</value>
    </property>

    <!-- 配置 secondary 所在的机器  -->
    <property>
        <name>dfs.namenode.secondary.http-address</name>
        <value>hadoop-101.com:50090</value>
    </property>
</configuration>
